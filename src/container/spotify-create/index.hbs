;<main class="main">
  <div class="main__content">
    <header class="header">
      <a href="/spotify-choose">
        <img src="/svg/cross_back.svg" />
      </a>
    </header>
    <h1 class="title title--center title--small">
      Назвіть плейлист
    </h1>

    <form
      method="POST"
      action="/spotify-create{{#if data.isMix}}?isMix=true{{/if}}"
      class="form"
    >
      <input
        required
        type="text"
        class="form__field"
        placeholder="Назва"
        name="name"
      />
      <button class="form__button">Створити</button>
    </form>
  </div>
</main>
